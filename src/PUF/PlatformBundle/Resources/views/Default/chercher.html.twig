{% endblock %}

{% block dropdown %}
    <ul class="nav navbar-nav navbar-left">  
        <li><a href="{{ path('puf_platform_homepage') }}">Accueil</a></li>
        <li>
            <a data-toggle="dropdown">Recherche<span class="caret"></span></a>
