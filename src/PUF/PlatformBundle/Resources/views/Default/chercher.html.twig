{% block chercherResultat %}
<div id="resultat">
    <table border="1">
        <tr>
            <th>
                Nom de Pays
            </th>
        </tr>
        {% for pays in query %}
            <tr>
                <td>{{ pays.nomPays }}</td>
            </tr>
        {% endfor %}
    </table>    
</div>
{% endblock %}

